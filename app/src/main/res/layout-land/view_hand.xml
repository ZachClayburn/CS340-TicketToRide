<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:text="@string/player_hand"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/blue_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/green_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/purple_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/red_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/orange_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/yellow_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/black_card"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blue_cards" />
        <TextView
            android:id="@+id/green"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/green_cards" />
        <TextView
            android:id="@+id/purple"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pink_cards" />
        <TextView
            android:id="@+id/red"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/red_cards" />
        <TextView
            android:id="@+id/orange"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/orange_cards" />
        <TextView
            android:id="@+id/yellow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/yellow_cards" />
        <TextView
            android:id="@+id/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/black_cards" />
        
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/white_card"/>
        <ImageView
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/locomotive"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/white_cards" />
        <TextView
            android:id="@+id/wild"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/locomotive_cards" />
    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/black" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:text="@string/player_dest"
            android:textSize="20dp"
            android:gravity="center"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dest_card_list">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>