<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <TextView
        android:id="@+id/discard_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/discard_hint"
        android:gravity="center_horizontal"
        android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/blue_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/blue_card"/>
        <ImageView
            android:id="@+id/green_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/green_card"/>
        <ImageView
            android:id="@+id/purple_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/purple_card"/>
        <ImageView
            android:id="@+id/red_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/red_card"/>
        <ImageView
            android:id="@+id/orange_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/orange_card"/>
        <ImageView
            android:id="@+id/yellow_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/yellow_card"/>
        <ImageView
            android:id="@+id/black_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/black_card"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center_horizontal">
        <TextView
            android:id="@+id/blue"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/blue_cards" />
        <TextView
            android:id="@+id/green"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/green_cards" />
        <TextView
            android:id="@+id/purple"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/pink_cards" />
        <TextView
            android:id="@+id/red"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/red_cards" />
        <TextView
            android:id="@+id/orange"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/orange_cards" />
        <TextView
            android:id="@+id/yellow"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/yellow_cards" />
        <TextView
            android:id="@+id/black"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/black_cards" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:id="@+id/white_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/white_card"/>
        <ImageView
            android:id="@+id/wild_card"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:src="@drawable/locomotive"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/white"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/white_cards" />
        <TextView
            android:id="@+id/wild"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/locomotive_cards" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <TextView
            android:id="@+id/discard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/discard_number"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel_select"
            android:id="@+id/cancel_button"
            android:layout_gravity="center"/>
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="@string/discard"
            android:id="@+id/discard_button"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>